					<label>Marti Win</label>
					<input type='number' value="100" class="form-control" id="on_win_marti" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>reset Marti If Win</label>
					<input type='number' value="1" class="form-control" id="reset_marti_if_wins" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>Reset Win Trade</label>
					<input type='number' value="0" class="form-control" id="reset_win_trade" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>If Win</label>
					<input type='number' value="0" class="form-control" id="if_wines" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>Auto Boom</label>
