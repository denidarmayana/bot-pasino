<div class='card mb-3'>
	<div class="card-body p-2">
		<span class="badge w-100 light badge-primary mb-2 text-center">Setting Trade</span>
		<input type="hidden" id="hidden_base_trade" />
		<input type="checkbox" id="mystop" style="display:none;" >
		<input type="checkbox" id"stop_ons_win" style="display:none;" > 
		<input type="hidden" value="1" name="mybalance"> 
		<div class="row">
			<div class="col-6">
				<div class="form-group">
					<label>Base Trade</label>
					<input type='number' value="0.0001" id="base_trade" class="form-control" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>Shoot</label>
					<input type='number' value="1.00000000" id="shoot_input" class="form-control" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>Boom</label>
					<input type='number' value="10.00000000" id="boom_input" class="form-control" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>Balance Below</label>
					<input type='number' value="0" id="low_ball" class="form-control" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>Chance Min</label>
					<input type='number' value="45" class="form-control" id="ch_mins" style="padding:5px 15px;height:auto">
				</div>
			</div>
			<div class="col-6">
				<div class="form-group">
					<label>Profit Global</label>
					<input type='number' value="0" class="form-control" id="prof_glob" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>Profit Session</label>
					<input type='number' value="10" class="form-control" id="res_proft" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>Delay</label>
					<input type='number' value="100" class="form-control" id="delay_time" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>Time Frame</label>
					<input type='number' value="2" class="form-control" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>Chance Max</label>
					<input type='number' value="47" class="form-control" id="ch_maxs" style="padding:5px 15px;height:auto">
				</div>
			</div>
		</div>
	</div>
</div>

<div class='row'>
	<div class='col-6'>
