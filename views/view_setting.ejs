				<div class="form-group">
					<label>Reset Los Trade</label>
					<input type='number' value="0" class="form-control" id="rt_trades" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>If Los</label>
					<input type='number' value="0" class="form-control" id="if_loses" style="padding:5px 15px;height:auto">
				</div>
				<div class="form-group">
					<label>Auto Boom</label>
					<input type='number' value="0" class="form-control" id="and_boom" style="padding:5px 15px;height:auto">
